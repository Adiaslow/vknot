---
import ProjectsLayout from "../layouts/ProjectsLayout.astro";

const creativeProjects = [
  {
    title: "Procedaural",
    description:
      "Mathematical spatial audio synthesis environment combining real-time signal generation with acoustic space simulation using layered architecture and plugin systems.",
    tags: ["TypeScript", "Python", "Audio Synthesis", "Electron"],
    status: "In Development",
    type: "personal",
  },
  {
    title: "cloth-of-gold-processing",
    description:
      "Creative coding framework for generative art and procedural content generation using mathematical principles.",
    tags: ["Processing", "Generative Art", "Creative Coding", "Visualization"],
    status: "Experimental",
    github: "https://github.com/Adiaslow/cloth-of-gold-processing",
    type: "personal",
  },
  {
    title: "Tender Circuits",
    description:
      "Independent record label and audiovisual collective curating ambient and experimental electronic music releases.",
    tags: ["Audio Production", "Creative Direction", "Label Management"],
    status: "Active",
    website: "https://vknot.love/tender_circuits",
    type: "personal",
  },
  {
    title: "Audio Visualization Suite",
    description:
      "Real-time audio visualization tools for live performance and installation work, featuring mathematical pattern generation and reactive visual systems.",
    tags: ["Audio Visualization", "Live Performance", "Interactive Media"],
    status: "In Development",
    type: "personal",
  },
  {
    title: "Generative Ambient Systems",
    description:
      "Algorithmic composition tools for creating ambient soundscapes using cellular automata, L-systems, and other procedural techniques.",
    tags: ["Generative Music", "Algorithmic Composition", "Ambient"],
    status: "Experimental",
    type: "personal",
  },
  {
    title: "Interactive Installation Framework",
    description:
      "Cross-platform framework for creating responsive installations that react to environmental inputs through sensors and computer vision.",
    tags: ["Interactive Media", "Computer Vision", "Installation Art"],
    status: "Experimental",
    type: "personal",
  },
];
---

<ProjectsLayout
  title="Creative Projects"
  description="Audio synthesis, generative art, and experimental interfaces by Adam Murray."
>
  <section class="flex flex-col gap-8">
    <div class="flex flex-col gap-4">
      <h1 class="text-4xl font-bold text-white tracking-tight">
        Creative & Experimental
      </h1>
      <p class="text-xl text-slate-300 leading-relaxed max-w-4xl">
        Explorations at the intersection of technology, mathematics, and
        creative expression. From audio synthesis to generative art, these
        projects investigate new forms of computational creativity and
        interactive media.
      </p>

      <div class="flex items-center gap-4 text-sm text-slate-400">
        <span>{creativeProjects.length} projects</span>
        <span>â€¢</span>
        <span>Experimental interfaces to production systems</span>
      </div>
    </div>

    <div class="grid gap-8 lg:grid-cols-2">
      {
        creativeProjects.map((project) => (
          <article class="group relative overflow-hidden rounded-2xl border border-slate-800 bg-slate-900/70 p-6 transition-all duration-300 hover:border-slate-700 hover:bg-slate-900/90 hover:-translate-y-1">
            <div class="flex flex-col gap-4">
              <div class="flex items-start justify-between gap-3">
                <div class="flex flex-col gap-2">
                  <h3 class="text-xl font-bold text-white group-hover:text-pink-300 transition-colors">
                    {project.title}
                  </h3>
                  <div class="flex items-center gap-2 flex-wrap">
                    {project.type && (
                      <span
                        class={`text-xs px-2 py-1 rounded-full font-medium ${
                          project.type === "personal"
                            ? "bg-pink-900/30 border border-pink-800/50 text-pink-300"
                            : "bg-slate-800/30 border border-slate-700/50 text-slate-300"
                        }`}
                      >
                        {project.type === "personal" ? "Personal" : "Creative"}
                      </span>
                    )}
                  </div>
                </div>

                <span
                  class={`text-xs px-2 py-1 rounded-full font-medium ${
                    project.status === "Active"
                      ? "bg-green-900/30 border border-green-800/50 text-green-300"
                      : project.status === "In Development"
                        ? "bg-yellow-900/30 border border-yellow-800/50 text-yellow-300"
                        : "bg-purple-900/30 border border-purple-800/50 text-purple-300"
                  }`}
                >
                  {project.status}
                </span>
              </div>

              <p class="text-slate-400 leading-relaxed text-sm">
                {project.description}
              </p>

              <div class="flex flex-wrap gap-2">
                {project.tags.map((tag) => (
                  <span class="text-xs px-2 py-1 rounded bg-slate-800 text-slate-300 border border-slate-700">
                    {tag}
                  </span>
                ))}
              </div>

              <div class="flex items-center gap-4 pt-4 border-t border-slate-800 mt-auto">
                {project.github && (
                  <a
                    class="inline-flex items-center gap-2 text-sm font-medium text-pink-400 hover:text-pink-300 transition-colors"
                    href={project.github}
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    <svg
                      class="w-4 h-4"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.30.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                    </svg>
                    <span>View Code</span>
                  </a>
                )}

                {project.website && (
                  <a
                    class="inline-flex items-center gap-2 text-sm font-medium text-pink-400 hover:text-pink-300 transition-colors"
                    href={project.website}
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    <svg
                      class="w-4 h-4"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                      />
                    </svg>
                    <span>Visit Site</span>
                  </a>
                )}
              </div>
            </div>

            {/* Hover gradient effect */}
            <div class="absolute inset-0 bg-gradient-to-br from-pink-600/5 via-transparent to-purple-600/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none" />
          </article>
        ))
      }
    </div>

    <!-- Creative Philosophy Section -->
    <section
      class="rounded-2xl border border-slate-800/50 bg-slate-900/30 p-8 mt-8"
    >
      <div class="flex flex-col gap-6">
        <h2 class="text-2xl font-bold text-white">Creative Philosophy</h2>
        <div class="grid gap-6 md:grid-cols-2">
          <div class="flex flex-col gap-3">
            <h3 class="text-lg font-semibold text-pink-300">
              Mathematical Beauty
            </h3>
            <p class="text-slate-400 text-sm leading-relaxed">
              Exploring the intersection of mathematical principles and
              aesthetic expression, creating works that reveal the inherent
              beauty in computational processes.
            </p>
          </div>
          <div class="flex flex-col gap-3">
            <h3 class="text-lg font-semibold text-purple-300">
              Generative Systems
            </h3>
            <p class="text-slate-400 text-sm leading-relaxed">
              Building autonomous creative systems that can evolve and adapt,
              using algorithmic composition and procedural generation
              techniques.
            </p>
          </div>
          <div class="flex flex-col gap-3">
            <h3 class="text-lg font-semibold text-cyan-300">
              Interactive Media
            </h3>
            <p class="text-slate-400 text-sm leading-relaxed">
              Developing responsive environments that blur the line between
              digital and physical, creating immersive experiences through
              technology.
            </p>
          </div>
          <div class="flex flex-col gap-3">
            <h3 class="text-lg font-semibold text-emerald-300">Sound Design</h3>
            <p class="text-slate-400 text-sm leading-relaxed">
              Crafting sonic landscapes through spatial audio synthesis,
              procedural composition, and experimental recording techniques.
            </p>
          </div>
        </div>
      </div>
    </section>
  </section>
</ProjectsLayout>

