---
export interface Props {
  title?: string;
  number?: string;
}

const { title, number } = Astro.props;
---

<div class="my-6 rounded-lg border-l-4 border-orange-600 bg-white p-5 dark:bg-slate-900 dark:border-orange-400">
  <div class="flex items-baseline gap-2 mb-2">
    <strong class="font-semibold text-orange-700 dark:text-orange-300">
      Assumption
      {number && <span class="ml-1">{number}</span>}
      {title && <span class="ml-1">({title})</span>}
    </strong>
  </div>
  <div class="text-slate-900 dark:text-slate-100 leading-relaxed">
    <slot />
  </div>
</div>
