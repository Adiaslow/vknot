---
export interface Props {
  title?: string;
  number?: string;
}

const { title, number } = Astro.props;
---

<div class="my-6 rounded-lg border-l-4 border-amber-600 bg-amber-50 p-5 dark:bg-amber-950/20 dark:border-amber-500">
  <div class="flex items-baseline gap-2 mb-2">
    <strong class="font-semibold text-amber-900 dark:text-amber-100">
      {title || "Definition"}
      {number && <span class="ml-1">{number}</span>}
    </strong>
  </div>
  <div class="text-slate-700 dark:text-slate-300 leading-relaxed">
    <slot />
  </div>
</div>
