---
export interface Props {
  title?: string;
  number?: string;
}

const { title, number } = Astro.props;
---

<div class="my-6 rounded-lg border-l-4 border-teal-600 bg-teal-50 p-5 dark:bg-teal-950/20 dark:border-teal-500">
  <div class="flex items-baseline gap-2 mb-2">
    <strong class="font-semibold text-teal-900 dark:text-teal-100">
      {title || "Example"}
      {number && <span class="ml-1">{number}</span>}
    </strong>
  </div>
  <div class="text-slate-700 dark:text-slate-300 leading-relaxed">
    <slot />
  </div>
</div>
