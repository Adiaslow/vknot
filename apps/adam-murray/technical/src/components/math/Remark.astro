---
export interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<div class="my-6 rounded-lg border-l-4 border-purple-600 bg-purple-50 p-5 dark:bg-purple-950/20 dark:border-purple-500">
  <div class="flex items-baseline gap-2 mb-2">
    <strong class="font-semibold text-purple-900 dark:text-purple-100">
      {title || "Remark"}
    </strong>
  </div>
  <div class="text-slate-700 dark:text-slate-300 leading-relaxed">
    <slot />
  </div>
</div>
