---
export interface Props {
  title?: string;
  number?: string;
}

const { title, number } = Astro.props;
---

<div class="my-6 rounded-lg border-l-4 border-blue-600 bg-blue-50 p-5 dark:bg-blue-950/20 dark:border-blue-500">
  <div class="flex items-baseline gap-2 mb-2">
    <strong class="font-semibold text-blue-900 dark:text-blue-100">
      {title || "Theorem"}
      {number && <span class="ml-1">{number}</span>}
    </strong>
  </div>
  <div class="text-slate-700 dark:text-slate-300 leading-relaxed">
    <slot />
  </div>
</div>
