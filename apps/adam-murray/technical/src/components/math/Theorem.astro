---
export interface Props {
  title?: string;
  number?: string;
}

const { title, number } = Astro.props;
---

<div class="my-6 rounded-lg border-l-4 border-blue-600 bg-white p-5 dark:bg-slate-900 dark:border-blue-400">
  <div class="flex items-baseline gap-2 mb-2">
    <strong class="font-semibold text-blue-700 dark:text-blue-300">
      {title || "Theorem"}
      {number && <span class="ml-1">{number}</span>}
    </strong>
  </div>
  <div class="text-slate-900 dark:text-slate-100 leading-relaxed">
    <slot />
  </div>
</div>
