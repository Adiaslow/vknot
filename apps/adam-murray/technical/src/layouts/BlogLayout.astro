---
import { Navigation, SEO } from "@vknot/ui";

export interface Props {
  readonly title: string;
  readonly description?: string;
  readonly hero?: Astro.Slot;
}

const { title, description } = Astro.props;
---

<html lang="en" class="bg-white text-slate-900">
  <head>
    <SEO
      title={title}
      description={description ?? "Research explorations in geometric deep learning, graph theory, and computational chemistry."}
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css"
    />
  </head>
  <body class="min-h-screen bg-white text-slate-900">
    <Navigation
      theme="blog"
      siteName="Adam Murray - Research Explorations"
      baseUrl="/adam-murray/technical"
      links={[
        { href: "/adam-murray/technical", label: "Posts" },
        { href: "/adam-murray/technical/about", label: "About" },
      ]}
      ctas={[]}
    />
    <main
      class="mx-auto flex w-full max-w-4xl flex-col gap-12 px-6 pb-24 pt-12"
    >
      <slot name="hero" />
      <article class="prose prose-slate max-w-none">
        <slot />
      </article>
    </main>
    <footer class="border-t border-slate-200 py-10 text-sm text-slate-500">
      <div class="mx-auto flex w-full max-w-4xl flex-col gap-2 px-6">
        <span>Â© {new Date().getFullYear()} Adam Murray</span>
      </div>
    </footer>
  </body>
</html>
