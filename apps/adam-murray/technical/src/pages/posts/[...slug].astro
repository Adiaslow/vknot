---
import { getCollection } from "astro:content";
import BlogLayout from "../../layouts/BlogLayout.astro";
import ArticleHeader from "../../components/ArticleHeader.astro";
import Theorem from "../../components/math/Theorem.astro";
import Definition from "../../components/math/Definition.astro";
import Proof from "../../components/math/Proof.astro";
import Lemma from "../../components/math/Lemma.astro";
import Corollary from "../../components/math/Corollary.astro";
import Remark from "../../components/math/Remark.astro";
import Example from "../../components/math/Example.astro";
import Conjecture from "../../components/math/Conjecture.astro";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content, components: mdxComponents } = await post.render();

// Provide math components to MDX
const components = {
  ...mdxComponents,
  Theorem,
  Definition,
  Proof,
  Lemma,
  Corollary,
  Remark,
  Example,
  Conjecture,
};
---

<BlogLayout
  title={post.data.title}
  description={post.data.description ?? ""}
>
  <ArticleHeader
    title={post.data.title}
    summary={post.data.description ?? ""}
    publishDate={post.data.date.toISOString()}
    showTags={false}
    tags={post.data.tags}
    readingTimeMinutes={post.data.readingTimeMinutes}
  />
  <Content {components} />
</BlogLayout>
