---
import { siteMeta } from "@vknot/config";

const { research, technical, projects, tenderCircuits } = siteMeta.apps;
---

<html lang="en" class="bg-gray-9.5 text-white">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>VKnot</title>
  </head>
  <body class="min-h-screen bg-gray-9.5 antialiased">
    <main class="mx-auto flex w-full max-w-4xl flex-col gap-16 px-6 py-24">
      <section class="flex flex-col gap-6">
        <p class="text-sm uppercase tracking-[0.4em] text-gray-4">VKNOT</p>
        <h1 class="text-4xl font-semibold text-white">
          Research, engineering, and creative projects.
        </h1>
      </section>

      <!-- Adam Murray Section -->
      <section class="flex flex-col gap-6">
        <h2 class="text-xs uppercase tracking-[0.3em] text-gray-5">
          Adam Murray
        </h2>
        <div class="grid gap-6 md:grid-cols-3">
          <a
            class="group rounded-2xl border border-gray-8 bg-gray-9/60 p-6 transition hover:border-gray-5"
            href={research.base}
          >
            <h3 class="text-xl font-semibold text-white">
              {research.title}
            </h3>
            <p class="mt-3 text-sm text-gray-3">
              {research.description}
            </p>
          </a>

          <a
            class="group rounded-2xl border border-gray-8 bg-gray-9/60 p-6 transition hover:border-gray-5"
            href={technical.base}
          >
            <h3 class="text-xl font-semibold text-white">
              {technical.title}
            </h3>
            <p class="mt-3 text-sm text-gray-3">
              {technical.description}
            </p>
          </a>

          <a
            class="group rounded-2xl border border-gray-8 bg-gray-9/60 p-6 transition hover:border-gray-5"
            href={projects.base}
          >
            <h3 class="text-xl font-semibold text-white">
              {projects.title}
            </h3>
            <p class="mt-3 text-sm text-gray-3">
              {projects.description}
            </p>
          </a>
        </div>
      </section>

      <!-- Imprints Section -->
      <section class="flex flex-col gap-6">
        <h2 class="text-xs uppercase tracking-[0.3em] text-gray-5">
          Imprints
        </h2>
        <div class="grid gap-6 md:grid-cols-2">
          <a
            class="group rounded-2xl border border-gray-8 bg-gray-9/60 p-6 transition hover:border-gray-5"
            href={tenderCircuits.base}
          >
            <h3 class="text-xl font-semibold text-white">
              {tenderCircuits.title}
            </h3>
            <p class="mt-3 text-sm text-gray-3">
              {tenderCircuits.description}
            </p>
          </a>
        </div>
      </section>
    </main>
  </body>
</html>
