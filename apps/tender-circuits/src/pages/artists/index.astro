---
import LabelLayout from "../../layouts/LabelLayout.astro";

const artists = [
  {
    name: "Soft Systems",
    description:
      "Ambient electronic compositions exploring texture and space through algorithmic processes and field recordings.",
    genres: ["Electronic", "Ambient", "Experimental"],
    releases: ["Life Is Fragile"],
    slug: "soft-systems",
    featured: true,
  },
];
---

<LabelLayout
  title="Artists"
  description="Artists and collaborators releasing with Tender Circuits."
>
  <section class="flex flex-col gap-12">
    <div class="card rounded-2xl p-8">
      <div class="flex flex-col gap-4">
        <h1 class="text-4xl font-medium text-cream-100 tracking-tight">Artists</h1>
        <p class="text-lg text-cream-200 leading-relaxed max-w-3xl">
          Curating a carefully selected roster of artists working at the
          intersection of ambient electronics, experimental sound design, and
          electroacoustic composition.
        </p>
      </div>
    </div>

    <div class="grid gap-12 md:gap-16">
      {
        artists.map((artist) => (
          <article class="card group rounded-2xl p-8">
            <div class="flex flex-col gap-6">
              {/* Artist Header */}
              <div class="flex flex-col gap-3">
                <div class="flex items-center gap-3">
                  <h2 class="text-3xl font-medium text-cream-100 group-hover:text-cream-50 transition-colors">
                    {artist.name}
                  </h2>
                  {artist.featured && (
                    <span class="text-sm text-terracotta-500">
                      Featured artist
                    </span>
                  )}
                </div>
                <p class="text-cream-200 leading-relaxed max-w-2xl">
                  {artist.description}
                </p>
              </div>

              {/* Genres */}
              <div class="text-sm text-warmGray-400">
                {artist.genres.join(" / ")}
              </div>

              {/* Releases */}
              <div class="flex flex-col gap-3">
                <h3 class="text-sm font-medium text-warmGray-500">
                  Releases on Tender Circuits
                </h3>
                <div class="flex flex-col gap-2">
                  {artist.releases.map((release) => (
                    <div class="flex items-center gap-2">
                      <div class="w-1 h-1 rounded-full bg-warmGray-500" />
                      <span class="text-cream-200 font-medium">{release}</span>
                    </div>
                  ))}
                </div>
              </div>

              {/* Actions */}
              <div class="flex items-center gap-4 pt-4">
                <a
                  class="text-sm font-medium text-terracotta-500 hover:text-terracotta-400 transition-colors"
                  href={`/tender_circuits/artists/${artist.slug}`}
                >
                  Artist Profile
                </a>
                <span class="text-warmGray-500">â€¢</span>
                <a
                  class="text-sm font-medium text-warmGray-400 hover:text-cream-200 transition-colors"
                  href="/tender_circuits/releases"
                >
                  View Releases
                </a>
              </div>
            </div>
          </article>
        ))
      }
    </div>

    {/* Future Artists Section */}
    <section class="card rounded-2xl p-8">
      <div class="flex flex-col gap-4 text-center">
        <h2 class="text-2xl font-medium text-cream-100">Submissions</h2>
        <p class="text-warmGray-400 leading-relaxed max-w-2xl mx-auto">
          Tender Circuits is always seeking new artists working in ambient,
          experimental, and electroacoustic music. We prioritize music that
          explores texture, space, and process.
        </p>
        <div class="pt-2">
          <span class="text-sm text-warmGray-500">
            Submissions are currently invite-only
          </span>
        </div>
      </div>
    </section>
  </section>
</LabelLayout>

