---
import LabelLayout from "../../layouts/LabelLayout.astro";

const artists = [
  {
    name: "Soft Systems",
    description:
      "Ambient electronic compositions exploring texture and space through algorithmic processes and field recordings.",
    genres: ["Electronic", "Ambient", "Experimental"],
    releases: ["Life Is Fragile"],
    slug: "soft-systems",
    featured: true,
  },
];
---

<LabelLayout
  title="Artists"
  description="Artists and collaborators releasing with Tender Circuits."
>
  <section class="flex flex-col gap-8">
    <div class="flex flex-col gap-4">
      <h1 class="text-4xl font-bold text-white tracking-tight">Artists</h1>
      <p class="text-lg text-slate-300 leading-relaxed max-w-3xl">
        Curating a carefully selected roster of artists working at the
        intersection of ambient electronics, experimental sound design, and
        electroacoustic composition.
      </p>
    </div>

    <div class="grid gap-8 md:gap-12">
      {
        artists.map((artist) => (
          <article
            class={`group rounded-2xl border border-slate-800 bg-slate-900/70 p-8 transition-all duration-300 hover:border-slate-700/80 hover:bg-slate-900/90 ${
              artist.featured ? "ring-1 ring-emerald-800/30" : ""
            }`}
          >
            <div class="flex flex-col gap-6">
              {/* Artist Header */}
              <div class="flex flex-col gap-3">
                <div class="flex items-center gap-3">
                  <h2 class="text-3xl font-bold text-white group-hover:text-emerald-100 transition-colors">
                    {artist.name}
                  </h2>
                  {artist.featured && (
                    <span class="text-xs uppercase tracking-[0.3em] text-emerald-300 bg-emerald-900/30 px-3 py-1 rounded-full">
                      Featured Artist
                    </span>
                  )}
                </div>
                <p class="text-slate-300 leading-relaxed max-w-2xl">
                  {artist.description}
                </p>
              </div>

              {/* Genres */}
              <div class="flex flex-wrap gap-2">
                {artist.genres.map((genre) => (
                  <span class="text-xs px-3 py-1 rounded-full bg-slate-800 text-slate-300 border border-slate-700">
                    {genre}
                  </span>
                ))}
              </div>

              {/* Releases */}
              <div class="flex flex-col gap-3">
                <h3 class="text-sm font-medium text-slate-400 uppercase tracking-[0.2em]">
                  Releases on Tender Circuits
                </h3>
                <div class="flex flex-col gap-2">
                  {artist.releases.map((release) => (
                    <div class="flex items-center gap-2">
                      <div class="w-1 h-1 rounded-full bg-slate-500" />
                      <span class="text-slate-300 font-medium">{release}</span>
                    </div>
                  ))}
                </div>
              </div>

              {/* Actions */}
              <div class="flex items-center gap-4 pt-4 border-t border-slate-800">
                <a
                  class="inline-flex items-center gap-2 text-sm font-medium text-emerald-300 hover:text-emerald-200 transition-colors"
                  href={`/tender_circuits/artists/${artist.slug}`}
                >
                  <svg
                    class="w-4 h-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                    />
                  </svg>
                  <span>Artist Profile</span>
                </a>
                <a
                  class="inline-flex items-center gap-2 text-sm font-medium text-slate-400 hover:text-slate-300 transition-colors"
                  href="/tender_circuits/releases"
                >
                  <svg
                    class="w-4 h-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"
                    />
                  </svg>
                  <span>View Releases</span>
                </a>
              </div>
            </div>
          </article>
        ))
      }
    </div>

    {/* Future Artists Section */}
    <section class="rounded-2xl border border-slate-800/50 bg-slate-900/30 p-8">
      <div class="flex flex-col gap-4 text-center">
        <h2 class="text-2xl font-semibold text-white">Submissions</h2>
        <p class="text-slate-400 leading-relaxed max-w-2xl mx-auto">
          Tender Circuits is always seeking new artists working in ambient,
          experimental, and electroacoustic music. We prioritize music that
          explores texture, space, and process.
        </p>
        <div class="pt-2">
          <span class="text-sm text-slate-500">
            Submissions are currently invite-only
          </span>
        </div>
      </div>
    </section>
  </section>
</LabelLayout>

