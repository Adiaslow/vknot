---
import LabelLayout from "../layouts/LabelLayout.astro";

const featuredReleases = [
  {
    title: "Life Is Fragile",
    artist: "Soft Systems",
    year: 2025,
    releaseDate: "Oct. 06, 2025",
    genres: ["Ambient", "Experimental"],
    subgenres: [],
    style: "Instrumental",
  },
];
---

<LabelLayout
  title="Tender Circuits"
  description="Independent record label curating ambient and experimental electronic music."
>
  <section class="flex flex-col gap-10">
    <div class="card rounded-2xl p-8">
      <header class="flex flex-col gap-3">
        <span class="text-xs tracking-wide text-warmGray-500"
          >Tender Circuits</span
        >
        <h1 class="text-4xl font-medium text-cream-100">
          Independent label for experimental sound and ambient electronics.
        </h1>
        <p class="max-w-2xl text-cream-200 leading-relaxed">
          Curating releases that explore ambient textures, avant-garde
          compositions, and the intersection of electronic and acoustic sound.
        </p>
      </header>
    </div>

    <section class="flex flex-col gap-10">
      <div class="card rounded-2xl p-6">
        <h2 class="text-2xl font-medium text-cream-100">Latest Release</h2>
      </div>
      {
        featuredReleases.map((release) => (
          <article class="card flex flex-col gap-6 rounded-2xl p-8">
            <div class="flex flex-col gap-5">
              <div class="flex items-center gap-3 text-sm text-warmGray-500">
                <span>New release</span>
                <span>•</span>
                <span>{release.releaseDate}</span>
              </div>

              <div class="flex flex-col gap-2">
                <h3 class="text-3xl font-medium text-cream-100">{release.title}</h3>
                <p class="text-lg text-cream-200">by {release.artist}</p>
              </div>

              <div class="text-sm text-warmGray-400">
                {release.genres.join(" / ")}
                {release.subgenres.length > 0 && " • " + release.subgenres.join(" / ")}
                {" • " + release.style}
              </div>
            </div>

            <div class="flex items-center gap-4 pt-4">
              <a
                class="inline-flex items-center gap-2 text-sm font-medium text-terracotta-500 hover:text-terracotta-400 transition-colors"
                href="/tender_circuits/releases"
              >
                Listen Now
              </a>
            </div>
          </article>
        ))
      }
    </section>

    <section class="flex flex-col gap-10">
      <div class="card rounded-2xl p-6">
        <h2 class="text-2xl font-medium text-cream-100">Coming Soon</h2>
      </div>
      <article class="card flex flex-col gap-6 rounded-2xl p-8">
        <div class="flex flex-col gap-5">
          <div class="flex items-center gap-3 text-sm">
            <span class="text-warmGray-500">TC003</span>
            <span class="text-xs uppercase tracking-[0.3em] text-amber-300 bg-amber-900/30 px-3 py-1 rounded-full">
              Coming Soon
            </span>
          </div>

          <div class="flex flex-col gap-2">
            <h3 class="text-3xl font-medium text-cream-100">Slow Light</h3>
            <p class="text-lg text-cream-200">by Soft Systems</p>
          </div>

          <div class="text-sm text-warmGray-400">
            Ambient / Post-Minimalist • Instrumental
          </div>
        </div>

        <div class="flex items-center gap-4 pt-4">
          <a
            class="inline-flex items-center gap-2 text-sm font-medium text-terracotta-500 hover:text-terracotta-400 transition-colors"
            href="/tender_circuits/releases/slow-light"
          >
            View Release
          </a>
        </div>
      </article>
    </section>
  </section>
</LabelLayout>
