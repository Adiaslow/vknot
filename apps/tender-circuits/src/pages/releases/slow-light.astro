---
import LabelLayout from "../../layouts/LabelLayout.astro";
import { getReleaseBySlug } from "../../data/releases";

const releaseConfig = getReleaseBySlug('slow-light');

if (!releaseConfig) {
  throw new Error('Release not found in catalog');
}
---

<LabelLayout
  title={`${releaseConfig.title} - ${releaseConfig.artistName}`}
  description={`${releaseConfig.title} by ${releaseConfig.artistName}: ${releaseConfig.description.substring(0, 150)}...`}
>
  <section class="flex flex-col gap-16">
    {/* Navigation and Release Header */}
    <div class="card rounded-2xl p-8">
      <div class="flex flex-col gap-6">
        <div class="flex items-center gap-2 text-sm text-slate-400">
          <a
            href="/tender_circuits/releases"
            class="hover:text-slate-300 transition-colors">Releases</a
          >
          <span>/</span>
          <span>{releaseConfig.title}</span>
        </div>

        <div class="flex items-center gap-3 flex-wrap">
          <span
            class="text-xs uppercase tracking-[0.3em] text-emerald-300 bg-emerald-900/30 px-3 py-1 rounded-full"
          >
            {releaseConfig.catalogNumber}
          </span>
          <span
            class="text-xs uppercase tracking-[0.3em] text-amber-300 bg-amber-900/30 px-3 py-1 rounded-full"
          >
            Coming Soon
          </span>
        </div>

        <div class="flex flex-col gap-3">
          <h1 class="text-4xl font-bold text-white tracking-tight">
            {releaseConfig.title}
          </h1>
          <div class="flex items-center gap-2">
            <span class="text-xl text-slate-300">by</span>
            <a
              href={`/tender_circuits/artists/${releaseConfig.artistSlug}`}
              class="text-xl text-emerald-300 hover:text-emerald-200 transition-colors font-medium"
            >
              {releaseConfig.artistName}
            </a>
          </div>
        </div>

        <p class="text-lg text-slate-300 leading-relaxed max-w-4xl">
          {releaseConfig.description}
        </p>

        {/* Genres and Tags */}
        <div class="flex flex-wrap gap-2">
          {
            releaseConfig.genres.map((genre) => (
              <span class="text-xs px-3 py-1 rounded-full bg-slate-800 text-slate-300 border border-slate-700">
                {genre}
              </span>
            ))
          }
          <span
            class="text-xs px-3 py-1 rounded-full bg-slate-700/50 text-slate-400 border border-slate-600/50"
          >
            {releaseConfig.style}
          </span>
        </div>
      </div>
    </div>

    <div class="flex flex-col gap-12">

      {/* Album Artwork */}
      {releaseConfig.vinylArtwork && (
        <div class="card rounded-2xl overflow-hidden max-w-2xl">
          <img
            src={releaseConfig.vinylArtwork}
            alt={`${releaseConfig.title} album artwork`}
            class="velvet-artwork-frame w-full h-auto"
          />
        </div>
      )}

      {/* Release Info */}
      <div class="grid gap-6 md:grid-cols-2">
        <div class="card rounded-2xl p-6">
          <div class="flex flex-col gap-4">
            <h3
              class="text-sm font-medium text-slate-400 uppercase tracking-[0.2em]"
            >
              Release Information
            </h3>
            <div class="grid gap-3">
              <div class="flex justify-between">
                <span class="text-slate-500">Format:</span>
                <span class="text-slate-300">Digital</span>
              </div>
              <div class="flex justify-between">
                <span class="text-slate-500">Catalog:</span>
                <span class="text-slate-300 font-mono"
                  >{releaseConfig.catalogNumber}</span
                >
              </div>
              <div class="flex justify-between">
                <span class="text-slate-500">Status:</span>
                <span class="text-amber-300">Coming Soon</span>
              </div>
            </div>
          </div>
        </div>

        <div class="card rounded-2xl p-6">
          <div class="flex flex-col gap-4">
            <h3
              class="text-sm font-medium text-slate-400 uppercase tracking-[0.2em]"
            >
              Availability
            </h3>
            <div class="flex flex-col gap-3 items-center justify-center py-4">
              <span class="text-amber-300 text-sm font-medium">Coming Soon</span>
              <p class="text-slate-400 text-sm text-center">
                This release will be available on all major streaming platforms.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>

    {/* Credits */}
    <section class="card rounded-2xl p-8">
      <div class="flex flex-col gap-6">
        <h2 class="text-xl font-semibold text-white">Credits</h2>

        <div class="grid gap-3">
          {
            Object.entries(releaseConfig.credits).map(([role, credit]) => (
              <div class="flex flex-col sm:flex-row sm:justify-between gap-1">
                <span class="text-slate-500 text-sm">{role}:</span>
                <span class="text-slate-300">{credit}</span>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    {/* Related */}
    <section class="flex flex-col gap-10">
      <div class="card rounded-2xl p-6">
        <h2 class="text-xl font-semibold text-white">More from Soft Systems</h2>
      </div>

      <div class="card rounded-2xl p-8">
        <div class="flex flex-col gap-4 text-center">
          <p class="text-slate-400">
            Also on Tender Circuits:
          </p>
          <div class="flex items-center gap-4 justify-center pt-2">
            <a
              class="inline-flex items-center gap-2 text-sm font-medium text-emerald-300 hover:text-emerald-200 transition-colors"
              href="/tender_circuits/releases/life-is-fragile"
            >
              <span>Life Is Fragile</span>
            </a>
            <span class="text-slate-500">|</span>
            <a
              class="inline-flex items-center gap-2 text-sm font-medium text-emerald-300 hover:text-emerald-200 transition-colors"
              href="/tender_circuits/artists/soft-systems"
            >
              <svg
                class="w-4 h-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                ></path>
              </svg>
              <span>View Artist Profile</span>
            </a>
          </div>
        </div>
      </div>
    </section>
  </section>
</LabelLayout>
