{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "types": [],
    "baseUrl": ".",
    "paths": {
      "@vknot/ui": ["packages/ui/src/index.ts"],
      "@vknot/ui/*": ["packages/ui/src/*"],
      "@vknot/config": ["packages/config/src/index.ts"],
      "@vknot/config/*": ["packages/config/src/*"],
      "@vknot/content": ["packages/content/src/index.ts"],
      "@vknot/content/*": ["packages/content/src/*"]
    }
  }
}

